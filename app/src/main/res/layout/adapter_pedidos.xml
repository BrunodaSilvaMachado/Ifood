<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/textPedidoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Jamilton damasceno"
            android:textSize="16sp"
            android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            tools:text="Tel: (99) 99999-9999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textPedidoTel"
            android:textSize="14sp"/>
    <TextView
            android:id="@+id/textPedidoEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Endereço: rua almeida prado, 1300"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/textPedidoPgto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pgto: Dinheiro"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/textPedidoObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Obs: teste"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/textPedidoItens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1) Filé Cinco Queijos (1 X R$ 16.50)"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
    />

</LinearLayout>