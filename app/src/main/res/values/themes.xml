<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ifood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:windowLightStatusBar" tools:targetApi="M">true</item>-->
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/ButtonBarStyle</item>

    </style>
    <style name="Theme.Ifood.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--TODO: o nome Theme.Splash Ã© ambiquo. Renomear.-->
    <style name="Theme.Splash" parent="Theme.Ifood.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@color/colorSplashBackground</item>
    </style>

    <style name="botaoPadrao" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#ff404e</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonBarStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="OutlinedBoxCustomError" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/teal_200</item>
        <item name="errorIconTint">@color/teal_200</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_error_24</item>
    </style>
</resources>